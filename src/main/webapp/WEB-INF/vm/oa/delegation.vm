#set($layout = "layout/oa_layout.vm")
<style type="text/css">
    td input {
        width: 100%;
        text-align: center;
        color: red;
        font-size: larger;
    }

    td {
        text-align: center;
    }

</style>
<div id="common-notice-dialog" class="hide"></div>
<div class="col-xs-4">
    <!-- PAGE CONTENT BEGINS -->
    <div style="text-align: center" class="col-xs-4">
        <h3 class="header smaller lighter blue" style="margin-left: auto;margin-right: auto;">设置代理</h3>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table style="border-collapse:collapse;" border="1" class="col-xs-12">
            	<tr style="height:50px">
                    <td style="text-align:left">
                    	<h4>代理人（请输入RTX ID）:</h4>
                    </td>
                    
                </tr>
                #foreach($user in $users)
                <tr style="height:50px">
                    <td style="text-align:left;text-valign:top">
					<h5>
					<span style="text-align:left">$user.agentUserId </span>
                    <span style="text-align:right"><a href='javascript:remove("$user.agentUserId")'>[删除]</a></span>
                    </h5>
                    </td>
                </tr>
				#end
                <tr style="height:50px">
                    <td>
                    <input type="text" id="delegation" value="" style="width:150px">
                    <button class="btn btn-info" type="button" onclick="add();">
                		保存
            		</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>   

<script src="/oaengine/static/js/utils.js"></script>
<script src="/oaengine/static/js/dialog_common.js"></script>
<script language=JavaScript>

    function add() {
    	if($("#delegation").val() == ''){
    		showCommonNoticeDialog('参数错误', 'icon-bolt',
                        generateNoticeMsg('代理人不能空'), 300);
            return;
    	}
        var params = {};
        var vars = {};
        vars["delegation"] = $("#delegation").val();
        params["vars"] = vars;
        $.ajax({
            contentType: "application/json; charset=utf-8",
            url: "oa/setting/add_delegation",
            type: "POST",
            data: JSON.stringify(params),
            success: function (resp) {
                if (resp.errorCode == 0) {
                    showCommonNoticeDialog('成功', 'icon-warning-sign', generateNoticeMsg("保存成功！"), 300);
                    window.location.href = '/oaengine/oa/setting/delegation.html';               
                } else {
                    showCommonNoticeDialog('失败', 'icon-warning-sign',
                            generateNoticeMsg(resp.errorMessage), 300);
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                showCommonNoticeDialog('网络错误', 'icon-bolt',
                        generateNoticeMsg('网络错误，请刷新后重试!'), 300);
            }
        })
    }

    function remove(agentUserId) {
        var params = {};
        var vars = {};
        vars["delegation"] = agentUserId;
        params["vars"] = vars;
        $.ajax({
            contentType: "application/json; charset=utf-8",
            url: "oa/setting/remove_delegation",
            type: "POST",
            data: JSON.stringify(params),
            success: function (resp) {
                if (resp.errorCode == 0) {
                    showCommonNoticeDialog('成功', 'icon-warning-sign', generateNoticeMsg("保存成功！"), 300);
                    window.location.href = '/oaengine/oa/setting/delegation.html';               
                } else {
                    showCommonNoticeDialog('失败', 'icon-warning-sign',
                            generateNoticeMsg(resp.errorMessage), 300);
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                showCommonNoticeDialog('网络错误', 'icon-bolt',
                        generateNoticeMsg('网络错误，请刷新后重试!'), 300);
            }
        })
    }
</script>
