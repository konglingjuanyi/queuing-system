<script language=JavaScript>

    jQuery(function ($) {
        window.edit_form = $("#edit-form").html();
        showDraftInfo("oa/draft", "draft");
    });
    function showTime() {
        WdatePicker({dateFmt: 'yyyy-MM-dd HH:mm:ss'});
