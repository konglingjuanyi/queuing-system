<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:qschedule="http://www.qunar.com/schema/qschedule"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.1.xsd http://www.qunar.com/schema/qschedule http://www.qunar.com/schema/qschedule/qschedule.xsd">


    <!-- qschedule采用注解的方式写 -->
    <!--<context:property-placeholder location="classpath:appConfig.properties" ignore-unresolvable="true"/>-->
    <qschedule:config address="${qschedule.zkAddress}" port="${qschedule.port}"/>
    <context:component-scan base-package="com.qunar.ops.oaengine.controller"/>

</beans>